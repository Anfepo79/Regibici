<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".RegistroActivity">


    <View
        android:id="@+id/view2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/myblue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />



    <View
        android:id="@+id/fondoblanco"
        android:layout_width="330dp"
        android:layout_height="300dp"
        android:background="@drawable/fondoblanco"
        android:radius="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <Button
        android:id="@+id/btnlogin"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_bias="0.05"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:hint="@string/BtnLogin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etPassword" />
    <EditText
        android:id="@+id/etUser"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:hint="@string/Login"
        android:background="#FFFFFF"
        android:textColor="#333333"
        app:layout_constraintVertical_bias="0."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fondoinicio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:autofillHints="emailAddress"
        android:inputType="text"/>


    <ImageView
        android:id="@+id/fondoinicio"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        app:layout_constraintDimensionRatio="W,1:1"
        app:layout_constraintVertical_bias="0.1"
        android:src="@drawable/regibici"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/fondoblanco"
        app:layout_constraintTop_toTopOf="@+id/fondoblanco" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="300dp"
        android:layout_height="48dp"
        app:layout_constraintVertical_bias="0.1"
        android:hint="@string/password"
        android:background="#FFFFFF"
        android:textColor="#333333"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etUser"
        android:autofillHints="password"
        android:inputType="textPassword"/>



    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"

        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.15" />




</androidx.constraintlayout.widget.ConstraintLayout>